@code {
    private List<DataLayer.Licitacao> licitacoes { get; set; }
    private DataLayer.Pintura pintura { get; set; }
    private DataLayer.Leilao leilao {get; set; }
    private int numLicitacoesDoLeilao {get; set;}
    protected override async Task OnInitializedAsync(){
    try{
        leilao = (await _leilao.GetLeilaoById(4)).First();// Mudar id
        licitacoes = (await _licitacoes.LicitacoesDoLeilaoOrdenadasPorValor(4));// Mudar id
        pintura = (await _pinturas.GetPinturaById(leilao.CodPintura)).First(); 
        numLicitacoesDoLeilao = (await _licitacoes.NumbLicitacoesByLeilao(leilao.Id)).First();
    }catch (Exception ex){
        Console.WriteLine($"Erro ao obter licitação: {ex.Message}");
    }
}  
    
